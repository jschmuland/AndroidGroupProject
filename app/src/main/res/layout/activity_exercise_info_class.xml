<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comjschmulandandroidgroupproject.httpsgithub.androidgroupproject.support.Exercise_info_class">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewExerciseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewExerciseName"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewTimeInExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewExerciseInfo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewTotalCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewTimeInExercise"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/exerciseButtonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/okSendButtom"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/listViewExercise" />

        <ProgressBar
            android:id="@+id/progressBarExercise"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_above="@+id/exerciseButtonSend"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="84dp" />

        <ListView
            android:id="@+id/listViewExercise"
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/progressBarExercise" />

    </RelativeLayout>

</LinearLayout>
