<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comjschmulandandroidgroupproject.httpsgithub.androidgroupproject.support.Exercise_info_class">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewExerciseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewExerciseName"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewExerciseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewTimeInExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewExerciseInfo"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewTotalCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=""
        android:gravity="center"
        android:layout_below="@+id/textViewTimeInExercise"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="645dp">

        <Button
            android:id="@+id/exerciseButtonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="@string/okSendButtom"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/progressBarExercise"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:visibility="visible"/>

        <ListView
            android:id="@+id/listViewExercise"
            android:layout_width="150dp"
            android:layout_height="400dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textViewDate"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="25dp"
            android:layout_alignBottom="@+id/progressBarExercise"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exerciseFrameLayout"
            android:layout_toEndOf="@+id/listViewExercise"
            android:layout_alignTop="@+id/listViewExercise"
            android:layout_alignBottom="@+id/listViewExercise">

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
